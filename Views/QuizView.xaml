<UserControl x:Class="QuizzProject.Views.QuizView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuizzProject.Views"
             xmlns:vms="clr-namespace:QuizzProject.ViewModels"
             mc:Ignorable="d"
             Background="AliceBlue"
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vms:QuizViewModel}">
    <Grid>
        <TextBlock Text="{Binding QuestionText}" FontSize="18" Margin="10" HorizontalAlignment="Center"/>

        <ItemsControl ItemsSource="{Binding Answers}" Margin="218,83,218,225">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <RadioButton Content="{Binding Text}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <Button Content="Next Question" Command="{Binding NextCommand}" HorizontalAlignment="Left" Margin="611,245,0,0" VerticalAlignment="Top"/>
        <Button Content="Previous Question" HorizontalAlignment="Left" Margin="119,245,0,0" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
