<UserControl x:Class="QuizzProject.Views.FinishView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuizzProject.Views"
             xmlns:vms="clr-namespace:QuizzProject.ViewModels"
             mc:Ignorable="d" 
             Background="AliceBlue"
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vms:FinishViewModel}">
    <Grid>
        <TextBlock FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Top">RESULT</TextBlock>
        <TextBlock FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding PlayerName}" Width="240" Margin="0,0,0,0"></TextBlock>
        <TextBlock FontSize="30" VerticalAlignment="Top" HorizontalAlignment="Center" Text="{Binding Difficulty}" Width="240" Margin="0,260,0,0"/>
        <TextBlock FontSize="30" VerticalAlignment="Top" HorizontalAlignment="Center" Text="{Binding Score}" Width="240" Margin="0,310,0,0"/>
        <Button Margin="344,381,344,48" Command="{Binding NewQuizCommand}">New Quiz</Button>
        <Button Command="{Binding ShowPlayerStats}" Margin="333,407,333,17">Stats</Button>
    </Grid>
</UserControl>
